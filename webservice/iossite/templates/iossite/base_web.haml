!!!5
%html{:lang => '={LANGUAGE_CODE}'}<
  %head
    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "Content-Type"}/
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %meta{:content => "webkit", :name => "renderer"}/
    %title {% block meta_title %}{% endblock %}{% if settings.SITE_TITLE %}_{{ settings.SITE_TITLE }}{% endif %}
    %meta{:name => "keywords", :content => "{% block meta_keywords %}{% endblock %}"}
    %meta{:name => "description", :content => "{% block meta_description %}{% endblock %}"}/
    -block extra_meta
      %meta{:name => "robots", :content => "INDEX,FOLLOW"}</
    %link{:href => "{% static 'common/img/favicon.ico' %}", :rel => "shortcut icon", :type => "image/x-icon"}/
    %link{:href => "{% static 'common/img/favicon.png' %}", :rel => "shortcut icon", :type => 'image/png'}/

    {% compress css %}
    %link{:href => "{% static 'common/css/site-v1.css' %}?1416988991591", :media => "all", :rel => "stylesheet", :type => "text/css"}/
    -block platform_css
      %link{:href => "{% static 'ios_web/css/site.css' %}?1416988991591", :media => "all", :rel => "stylesheet", :type => "text/css"}</

    %link{:href => "{% static 'common/css/quick-layout.css' %}?1416988991591", :media => "all", :rel => "stylesheet", :type => "text/css"}/
    %style
      {% site_logocss %}
    :css
      .diy_select{display:none}
      .search .key, #cc-l .search .key{width:88%}
      #cc-m .search .key{width:85%}
      #cc-s .search .key{width:80%}
    {% block extra_css %}{% endblock %}
    {% endcompress %}
    {% compress js %}{% block extra_js_header %}{% endblock %}{% endcompress %}
    %noscript
      %h1{:style => "font-size:100%;color:#e53333;display:block;text-align:center"} 由于您的浏览器禁用了javascript脚本，网页无法正常浏览!
  %body
    {% block top_menu %}
    / 头部开始 head
    {% page_menu "pages/menus/web/header_platform.haml" %}
    / 头部结束 head
    {% endblock %}

    {% block main %}{% endblock %}

    / 底部开始 footer
    .cell-bk.ios-web-icon.footer
      .auto.width.white
        {% cache 86400 product_web_footer request.get_host %}
        {% include_widget WebFooterWidget %}
        {% endcache %}
    / 底部结束 footer
    {% cache 86400 product_web_footer_floatbar request.get_host %}
    {% include_widget WebFooterFloatBarWidget %}
    {% endcache %}

    {% block after_footer %}{% endblock %}

    {% compress js %}
    %script{:src => "{% static 'common/js/jquery.min.js' %}"}
    %script{:src => "{% static 'common/js/jquery.cookie.js' %}"}
    %script{:src => "{% static 'common/js/jquery.SuperSlide.2.1.1.source.js' %}"}
    %script{:src => "{% static 'common/js/jquery.pin.js' %}"}
    %script{:src => "{% static 'common/zxxbox/js/jquery.zxxbox.3.0.js' %}"}
    %script{:src => "{% static 'common/js/Validform_v5.3.2_min.js' %}"}
    %script{:src => "{% static 'common/js/site-v1.js' %}"}
    %script{:src => "{% static 'common/js/scrollLoading.js' %}" }
    :javascript
      $(function(){
        $("img.lazy").scrollLoading({attr:"data-original"});
        $.ajax({url: '{% url "authpanel" %}',
                dataType: 'json',
                success: function(data){
                  var login = $('#login-reg');
                  if(data.title) login.find('.open-login').text(data.title);
                  login.append(data.panel);
                }
        });
      });
      function open_login(){return false;}
    -block platform_js
      %script{:src => "{% static 'ios_web/js/site.js' %}?1423647098768"}
    {% block extra_js_footer %}{% endblock %}
    {% endcompress %}
    %span.dn
      %script{:type => "text/javascript", :charset => "UTF-8", :src => "http://tajs.qq.com/stats?sId=35027569"}
      %span.dn
        :javascript
          var _bdhmProtocol = (("https:" == document.location.protocol) ? " https://" : " http://");
          document.write(unescape("%3Cscript src='" + _bdhmProtocol + "hm.baidu.com/h.js%3F828b147bbb4948edf937255560d20611' type='text/javascript'%3E%3C/script%3E"));
    {% ios_app_downbox %}
