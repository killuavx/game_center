-load pages_tags mezzanine_tags templatehelper_tags widgets cache future staticfiles user_agents
{% is_site_android as is_android %}{% is_site_ios as is_ios %}
!!!5
%html{:lang => '={LANGUAGE_CODE}'}<
  %head
    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "Content-Type"}/
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
    %meta{:content => "webkit", :name => "renderer"}
    %title {% block meta_title %}{% endblock %}{% if settings.SITE_TITLE %}_{{ settings.SITE_TITLE }}{% endif %}
    %meta{:name => "keywords", :content => "{% block meta_keywords %}{% endblock %}"}
    %meta{:name => "description", :content => "{% block meta_description %}{% endblock %}"}/
    -block extra_meta
      %meta{:name => "robots", :content => "INDEX,FOLLOW"}</
    %link{:href => "{% static 'common/img/favicon.png' %}", :rel => "shortcut icon", :type => "image/png"}/
    %link{:href => "{% static 'common/img/favicon.ico' %}", :rel => "icon", :type => "image/x-icon"}/
    {% compress css %}
    %link{:href => "{% static 'common/css/site-v1.css' %}", :media => "all", :rel => "stylesheet", :type => "text/css" }/
    -block platform_css
      %link{:href => "{% static 'cc_web/css/i-down.css' %}", :media => "all", :rel => "stylesheet", :type => "text/css" }/
    %link{:href => "{% static 'common/css/quick-layout.css' %}", :media => "all", :rel => "stylesheet", :type => "text/css"}/
    {% block extra_css %}{% endblock %}{% endcompress %}
    %noscript
      %h1{:style => "font-size:100%;color:#e53333;display:block;text-align:center"} 由于您的浏览器禁用了javascript脚本，网页无法正常浏览!
    {% compress js %}{% block extra_js_header %}{% endblock %}{% endcompress %}
    -block head_base
  %body
    {% cache 86400 product_web_topmenu request.get_host request.path_info %}
    {% block top_menu %}
    / 头部开始 head
    {% include "pages/menus/web/header_product.haml" with logo_url='/' %}
    / 头部结束 head
    {% endblock %}
    {% endcache %}

    {% block main %}{% endblock %}

    / 底部开始 footer
    .cell-bk.ios-web-icon.footer
      .auto.width.white
        {% cache 86400 product_web_footer %}
        {% include_widget WebFooterWidget %}
        {% endcache %}
    / 底部结束 footer
    {% if request|is_mobile or request|is_tablet %}
      {% if is_android %}
      {% cache 86400 product_web_footer_floatbar request.get_host %}
      {% include_widget WebFooterFloatBarWidget %}
      {% endcache %}
      {% endif %}
    {% endif %}

    {% block after_footer %}{% endblock %}

    {% compress js %}
    %script{:src => "{% static 'common/js/jquery.min.js' %}"}
    %script{:src => "{% static 'common/js/jquery.SuperSlide.2.1.1.source.js' %}"}
    %script{:src => "{% static 'common/js/jquery.pin.js' %}"}
    %script{:src => "{% static 'common/zxxbox/js/jquery.zxxbox.3.0.js' %}"}
    %script{:src => "{% static 'common/js/Validform_v5.3.2_min.js' %}"}
    %script{:src => "{% static 'common/js/site-v1.js' %}"}
    {% block extra_js_footer %}{% endblock %}
    {% endcompress %}
    /[if IE 6]
      <script src="{% static 'common/js/DD_PNG.js' %}"></script>
      <script>window.onload = function() {DD_belatedPNG.fix(".png,.ios-web-icon,.ios-web-icon:hover"}</script>
