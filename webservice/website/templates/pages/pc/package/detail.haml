-extends "pc_base.haml"
-load util_tags url_tags templatehelper_tags pc_tags widgets
-block main
  {% is_site_ios as is_ios %}{% is_site_android as is_android %}
  .location>
    {% breadcrumbs_from package category=package.main_category product=product home_url='/pc/home/' %}

  -with title=version.subtitle|default:package.title
    .cb.box.dis
      .title
        %h1.fl= version.subtitle|default:package.title
      /
        %p.fr
          %span.icon.ad 有广告
          %span.icon.wifi.no 不需要联网
          %span.icon.google 需要谷歌服务
      .dis_box
        .cb.fl.l
          .up<
            .pic
              %img{:alt => "={title}", :src => "{% resource_url version 'icon' size_alias='xlarge' %}"}><
                %span.icon.cover
            {% version_data_as version entrytype=product as json %}
            .btn{"data-json" => "={json}"}
              %a.a1.install{:href => "javascript:;", :class => "app-install-btn-js"} 安装
              %a.a2{:href => "javascript:;", :class => "app-download-btn-js"} 下载
            %ul.instr
              %li<
                评分
                %span><
                  .icon.star{:class => "s={version.stars_average|floatformat:'0'}"}><
                  {{ version.stars_count|default:0 }}人评分
              %li<
                厂商
                %span><= package.author.name
              %li<
                发布
                %span><= version.released_datetime|date
              %li<
                版本
                %span><= version.version_name
              %li<
                大小
                %span><= version.get_download_size|filesizeformat
              %li<
                类别
                %span><= package.main_categories|join:", "
              %li<
                语言
                %span><= version.language_names|join:", "
              -if version.is_ios
                %li<
                  设备
                  %span><= version.as_ios.device_types|join:", "
              %li<
                下载
                %span>< {{ version.download_count|intwordcn }}+
          / up
          .list_box.down
            .fl.list_box_right.home_game_right
              {% include_widget PCRankingPackageListWidget cat_slug=package.main_category.get_root.slug max_items=10 %}
            / home_game_right
          / down
        / l
        .fr.r
          .up.up_box
            .up_pic
              %ul<
                -if is_ios
                  -for screenshot in version.screenshots.default
                    %li<
                      %img{:src => "={screenshot.image_url}"}/
                -if is_android
                  -for screenshot in version.screenshots.default
                    -with image=screenshot.image
                      %li<
                        %img{:src => "={image.large.url}"}/
            / up_pic
            .cb.banner_btn
              %a.unslider-arrow.icon.prev{:href => "javascript:void(0)"}
              %a.unslider-arrow.icon.next{:href => "javascript:void(0)"}
          / up
          .down
            %h3 应用介绍
            .text_inner= package.description|linebreaksbr
            / text_inner
            -if version.whatsnew|length > 1
              %h3 新版特性
              .text_inner= version.whatsnew|linebreaksbr
              / text_inner
          -#
            .review
              %h3.fl 应用评论
              %span.fr.login 请先登录，再来评分。
              %form.cb{:action => "", :method => "get"}
