- if user.is_authenticated
  .topnext.right
    %img{:src => "={user.icon.url}", :width =>  "22", :height => "22"}
    %span= user.username
    %ul.topmenu
      %li
        %a{:href => "{% url 'profile' username=user.username %}"} 个人页
      %li
        %a{:href => "{% url 'profile_update' %}"} 设置
      %li
        %a{:href => "{% url 'logout' %}"} 登出
- else
  .toprev.right
    %a{:href => "{% url 'login' %}" } 登陆
    |
    %a{:href => "{% url 'signup' %}" } 注册
